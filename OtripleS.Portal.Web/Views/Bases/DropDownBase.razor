@using Syncfusion.Blazor.DropDowns
@typeparam TEnum

<SfDropDownList TValue="TEnum"
                TItem="string"
                DataSource="@(Enum.GetNames(typeof(TEnum)))"
                Enabled="@(IsDisabled is false)"
                style="dropdown-space">

        <DropDownListEvents TValue="TEnum" 
                            TItem="string"
                            ValueChange="@OnValueChanged" />
</SfDropDownList>